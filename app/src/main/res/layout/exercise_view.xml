<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:theme="@style/AppTheme">

    <TextView
        android:id="@+id/exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Routine name"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="85dp"
        android:ems="3"
        android:hint="Weight"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btn_add05"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="45dp"
        android:layout_toRightOf="@id/et_weight"
        android:background="@drawable/dialog_bg_blue"
        android:text="+0.5"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/btn_add0625"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="45dp"
        android:layout_toRightOf="@id/et_weight"
        android:background="@drawable/dialog_bg_blue"
        android:text="+0.625"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/btn_sub0625"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="125dp"
        android:layout_toRightOf="@id/et_weight"
        android:background="@drawable/dialog_bg_blue"
        android:text="-0.625"
        android:textColor="@color/colorWhite" />
    <Button
        android:id="@+id/btn_sub05"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="125dp"
        android:layout_toRightOf="@id/et_weight"
        android:background="@drawable/dialog_bg_blue"
        android:text="-0.5"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/btn_add1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="45dp"
        android:layout_toRightOf="@id/et_weight"
        android:background="@drawable/dialog_bg_blue"
        android:text="+1"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/btn_add25"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="45dp"
        android:layout_toRightOf="@id/et_weight"
        android:background="@drawable/dialog_bg_blue"
        android:text="+2.5"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/btn_sub1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="125dp"
        android:layout_toRightOf="@id/et_weight"
        android:background="@drawable/dialog_bg_blue"
        android:text="-1"
        android:textColor="@color/colorWhite" />
    <Button
        android:id="@+id/btn_sub25"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="125dp"
        android:layout_toRightOf="@id/et_weight"
        android:background="@drawable/dialog_bg_blue"
        android:text="-2.5"
        android:textColor="@color/colorWhite" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_sub25"
        android:layout_marginLeft="20dp"
        android:textAlignment="center"
        android:layout_marginTop="21dp"
        android:text="Set 1"
        android:textSize="20dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btn_add_rep1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:layout_below="@id/btn_sub25"
        android:background="@drawable/dialog_bg_blue"
        android:text="+"
        android:textColor="@color/colorWhite" />

    <EditText
        android:id="@+id/et_RepS1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_sub25"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="140dp"
        android:ems="2"
        android:hint="10"
        android:inputType="numberDecimal"
        android:textAlignment="center" />
    <Button
        android:id="@+id/btn_sub_rep1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="200dp"
        android:layout_below="@id/btn_sub25"
        android:background="@drawable/dialog_bg_blue"
        android:text="-"
        android:textColor="@color/colorWhite" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/btn_sub25"
        android:text="Set 2"
        android:textSize="20dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btn_add_rep2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="60dp"
        android:layout_below="@id/btn_sub25"
        android:background="@drawable/dialog_bg_blue"
        android:text="+"
        android:textColor="@color/colorWhite" />

    <EditText
        android:id="@+id/et_RepS2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_sub25"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="173dp"
        android:layout_marginTop="140dp"
        android:ems="2"
        android:hint="10"
        android:inputType="numberDecimal"
        android:textAlignment="center" />
    <Button
        android:id="@+id/btn_sub_rep2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="200dp"
        android:layout_below="@id/btn_sub25"
        android:background="@drawable/dialog_bg_blue"
        android:text="-"
        android:textColor="@color/colorWhite" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/btn_sub25"
        android:text="Set 3"
        android:textSize="20dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btn_add_rep3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="60dp"
        android:layout_below="@id/btn_sub25"
        android:background="@drawable/dialog_bg_blue"
        android:text="+"
        android:textColor="@color/colorWhite" />

    <EditText
        android:id="@+id/et_RepS3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_sub25"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="333dp"
        android:layout_marginTop="140dp"
        android:ems="2"
        android:hint="10"
        android:inputType="numberDecimal"
        android:textAlignment="center" />
    <Button
        android:id="@+id/btn_sub_rep3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="200dp"
        android:layout_below="@id/btn_sub25"
        android:background="@drawable/dialog_bg_blue"
        android:text="-"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/btn_okay"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_sub_rep1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:text="Ok"
        android:textColor="#ff0000" />

    <Button
        android:id="@+id/btn_cancel"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_sub_rep1"
        android:layout_marginTop="25dp"
        android:layout_toLeftOf="@id/btn_okay"
        android:text="Cancel"
        android:textColor="#ff0000" />


</RelativeLayout>