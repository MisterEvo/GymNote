<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/AppTheme">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <Spinner
        android:id="@+id/spinner_group"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10sp"
        android:layout_marginTop="70dp" />

    <Button
        android:id="@+id/btn_add_Spinner_item"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/spinner_group"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="220dp"
        android:background="@drawable/ic_add_circle_outline_black_24dp"
        android:theme="@style/Widget.AppCompat.Button.Borderless" />

    <EditText
        android:id="@+id/et_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_group"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@android:color/transparent"
        android:textAlignment="center"
        android:textSize="60sp"
        android:ems="3"
        android:hint="Weight"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btn_add05"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="285dp"
        android:layout_marginRight="-35dp"
        android:layout_toLeftOf="@id/btn_add0625"
        android:background="@drawable/dialog_bg_blue"
        android:text="+0.5"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/btn_add0625"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="285dp"
        android:layout_toRightOf="@id/et_weight"
        android:background="@drawable/dialog_bg_blue"
        android:text="+0.625"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/btn_sub0625"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="-35dp"
        android:layout_marginTop="285dp"
        android:layout_toRightOf="@id/btn_sub05"
        android:background="@drawable/dialog_bg_blue"
        android:text="-0.625"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/btn_sub05"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="285dp"
        android:layout_marginRight="60dp"
        android:layout_toLeftOf="@id/et_weight"
        android:background="@drawable/dialog_bg_blue"
        android:text="-0.5"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/btn_add1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="380dp"
        android:layout_marginRight="-35dp"
        android:layout_toLeftOf="@id/btn_add25"
        android:background="@drawable/dialog_bg_blue"
        android:text="+1"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/btn_add25"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="380dp"
        android:layout_toRightOf="@id/et_weight"
        android:background="@drawable/dialog_bg_blue"
        android:text="+2.5"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/btn_sub1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="380dp"
        android:layout_marginRight="65dp"
        android:layout_toLeftOf="@id/et_weight"
        android:background="@drawable/dialog_bg_blue"
        android:text="-1"
        android:textColor="@color/colorWhite" />
    <Button
        android:id="@+id/btn_sub25"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="-35dp"
        android:layout_marginTop="380dp"
        android:layout_toRightOf="@id/btn_sub1"
        android:background="@drawable/dialog_bg_blue"
        android:text="-2.5"
        android:textColor="@color/colorWhite" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_sub25"
        android:layout_marginRight="25dp"
        android:layout_toLeftOf="@id/et_weight"
        android:textAlignment="center"
        android:layout_marginTop="21dp"
        android:text="Set 1"
        android:textSize="20dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btn_add_rep1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        android:layout_below="@id/btn_sub25"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/et_weight"
        android:background="@drawable/dialog_bg_blue"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="40dp"
        android:text="+"
        android:textColor="@color/colorWhite" />

    <EditText
        android:id="@+id/et_RepS1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_add1"
        android:layout_marginTop="140dp"
        android:layout_marginRight="15.5dp"
        android:layout_toLeftOf="@id/et_weight"
        android:background="@android:color/transparent"
        android:textSize="34sp"
        android:ems="2"
        android:hint="10"
        android:inputType="numberDecimal"
        android:textAlignment="center" />
    <Button
        android:id="@+id/btn_sub_rep1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/et_weight"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="40dp"
        android:layout_marginTop="200dp"
        android:layout_below="@id/btn_sub25"
        android:background="@drawable/dialog_bg_blue"
        android:text="-"
        android:textColor="@color/colorWhite" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@id/btn_add1"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text="Set 2"
        android:textSize="20dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btn_add_rep2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="40dp"
        android:layout_below="@id/btn_sub25"
        android:background="@drawable/dialog_bg_blue"
        android:text="+"
        android:textColor="@color/colorWhite" />

    <EditText
        android:id="@+id/et_RepS2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_sub25"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:ems="2"
        android:background="@android:color/transparent"
        android:hint="10"
        android:textSize="34sp"
        android:inputType="numberDecimal"
        android:textAlignment="center" />
    <Button
        android:id="@+id/btn_sub_rep2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="40dp"
        android:layout_marginTop="200dp"
        android:layout_below="@id/btn_sub25"
        android:background="@drawable/dialog_bg_blue"
        android:text="-"
        android:textColor="@color/colorWhite" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@id/btn_sub25"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@id/et_weight"
        android:text="Set 3"
        android:textSize="20dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btn_add_rep3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/et_weight"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="40dp"
        android:layout_marginTop="60dp"
        android:layout_below="@id/btn_sub25"
        android:background="@drawable/dialog_bg_blue"
        android:text="+"
        android:textColor="@color/colorWhite" />

    <EditText
        android:id="@+id/et_RepS3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_sub25"
        android:layout_marginLeft="15.5dp"
        android:layout_toRightOf="@id/et_weight"
        android:layout_marginTop="140dp"
        android:background="@android:color/transparent"
        android:ems="2"
        android:textSize="34sp"
        android:hint="10"
        android:inputType="numberDecimal"
        android:textAlignment="center" />
    <Button
        android:id="@+id/btn_sub_rep3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="200dp"
        android:layout_toRightOf="@id/et_weight"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@id/btn_sub25"
        android:textSize="40dp"
        android:background="@drawable/dialog_bg_blue"
        android:text="-"
        android:textColor="@color/colorWhite" />

    <ImageButton
        android:id="@+id/btn_okay"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/btn_sub_rep1"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="-50dp"
        android:layout_toRightOf="@id/et_weight"
        android:background="@drawable/roundbutton_green"
        android:src="@drawable/ic_check_circle_black_24dp"
        android:textColor="#ff0000" />

    <ImageButton
        android:id="@+id/btn_cancel"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="-50dp"
        android:layout_below="@id/btn_sub_rep1"
        android:layout_toLeftOf="@id/et_weight"
        android:layout_marginTop="25dp"
        android:background="@drawable/roundbutton_red"
        android:src="@drawable/ic_cancel"
        android:textColor="#ff0000" />


</RelativeLayout>