<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_d_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="exercise"
        android:textSize="20dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/et_d_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="65dp"
        android:ems="18"
        android:hint="Timestamp"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_d_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_d_timestamp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:ems="18"
        android:hint="Weight"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/et_d_repsS1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_d_weight"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="20dp"
        android:ems="3"
        android:hint="Set1"
        android:inputType="number"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/et_d_repsS2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_d_weight"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="3"
        android:hint="Set2"
        android:inputType="number"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/et_d_repsS3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_d_weight"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="20dp"
        android:ems="3"
        android:hint="Set3"
        android:inputType="number"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btn_d_okay"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_d_repsS3"

        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:text="Ok"
        android:textColor="#ff0000" />

    <Button
        android:id="@+id/btn_cancel"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_d_repsS3"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@id/btn_d_okay"
        android:text="Cancel"
        android:textColor="#ff0000" />

</RelativeLayout>